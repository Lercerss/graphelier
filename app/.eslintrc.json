{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": "error",
        "indent": ["error", 4],
        "camelcase": "error",
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "no-template-curly-in-string": "error"
    }
}